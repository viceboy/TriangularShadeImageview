<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="208dp"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.CardView
        android:id="@+id/crdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.viceboy.library.TriangularShadeImageView
                android:id="@+id/trView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:scaleType="fitXY"
                app:firstTriangleAnimDelay="40"
                app:firstTriangleAnimDuration="200"
                app:firstTriangleDrawDir="TOP_LEFT"
                app:firstTriangleSize="324dp"
                app:layout_constraintTop_toTopOf="parent"
                app:secondTriangleAnimDelay="10"
                app:secondTriangleAnimDuration="150"
                app:secondTriangleDrawDir="TOP_LEFT"
                app:secondTriangleSize="264dp"
                app:startPtForAnimFirstTriangle="-120"
                app:startPtForAnimSecondTriangle="-100"
                app:startPtForAnimThirdTriangle="-80"
                app:thirdTriangleAnimDelay="0"
                app:thirdTriangleAnimDuration="150"
                app:thirdTriangleDrawDir="TOP_LEFT"
                app:thirdTriangleSize="224dp"
                tools:src="@drawable/nature_blue_img" />

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="60dp"
                android:elevation="3dp"
                android:fontFamily="sans-serif"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/impressionism" />

            <TextView
                android:id="@+id/tvDateRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:elevation="3dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="June 7 - July 9"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHeader" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_button"
                android:text="Buy Ticket"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDateRange" />
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>